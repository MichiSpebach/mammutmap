{
  "compilerOptions": {
    "target": "es2021",
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "module": "es2022", // overriden by buildAppForOlderElectron in package.json, TODO: cleanup as soon as electron supports es-modules
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}

{
  "compilerOptions": {
    "target": "es2021",
    "module": "es2022", // overriden by buildPluginsForOlderElectron in package.json, TODO: cleanup as soon as electron supports es-modules
    "strict": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noImplicitOverride": true,
    "outDir": "../plugin",
    "moduleResolution": "node"
  },
  "exclude": ["**/*.test.ts"]
}
